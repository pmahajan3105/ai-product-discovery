{
  "name": "@feedbackhub/migrations",
  "version": "1.0.0",
  "description": "FeedbackHub Database Migration System",
  "main": "dist/MigrationRunner.js",
  "bin": {
    "migration": "dist/cli/MigrationCLI.js",
    "migrate": "dist/cli/MigrationCLI.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "ts-node -r tsconfig-paths/register cli/MigrationCLI.ts",
    "migrate": "npm run build && node dist/cli/MigrationCLI.js",
    "migrate:run": "npm run migrate run",
    "migrate:rollback": "npm run migrate rollback",
    "migrate:status": "npm run migrate status",
    "migrate:list": "npm run migrate list",
    "migrate:create": "npm run migrate create",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^9.4.1",
    "inquirer": "^8.2.5",
    "chalk": "^4.1.2",
    "sequelize": "^6.32.1",
    "pg": "^8.11.0"
  },
  "devDependencies": {
    "@types/inquirer": "^8.2.6",
    "@types/node": "^18.16.0",
    "typescript": "^5.0.4",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "jest": "^29.5.0",
    "@types/jest": "29.5.1"
  },
  "keywords": [
    "database",
    "migration",
    "postgres",
    "sequelize",
    "typescript"
  ],
  "author": "FeedbackHub Team",
  "license": "MIT"
}