# FeedbackHub API Environment Variables

# Server Configuration
NODE_ENV=development
PORT=3001

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/feedbackhub
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=feedbackhub
DATABASE_USER=username
DATABASE_PASSWORD=password

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100
REDIS_CONNECT_TIMEOUT=10000

# SuperTokens Configuration
SUPERTOKENS_CONNECTION_URI=https://try.supertokens.com
SUPERTOKENS_API_KEY=your_supertokens_api_key
SUPERTOKENS_APP_NAME=FeedbackHub
SUPERTOKENS_API_DOMAIN=http://localhost:3001
SUPERTOKENS_WEBSITE_DOMAIN=http://localhost:3000

# Google OAuth
GOOGLE_OAUTH_CLIENT_ID=your_google_client_id
GOOGLE_OAUTH_CLIENT_SECRET=your_google_client_secret

# API Keys and Secrets
JWT_SECRET=your_jwt_secret
API_SECRET_KEY=your_api_secret_key
WEBHOOK_SECRET=your_webhook_secret

# Integration API Keys
SLACK_CLIENT_ID=your_slack_client_id
SLACK_CLIENT_SECRET=your_slack_client_secret
SLACK_SIGNING_SECRET=your_slack_signing_secret

ZENDESK_CLIENT_ID=your_zendesk_client_id
ZENDESK_CLIENT_SECRET=your_zendesk_client_secret

INTERCOM_CLIENT_ID=your_intercom_client_id
INTERCOM_CLIENT_SECRET=your_intercom_client_secret

# Rate Limiting Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REDIS_NAMESPACE=feedbackhub-api
RATE_LIMIT_DEFAULT_INTERVAL=60000
RATE_LIMIT_DEFAULT_MAX=100

# Logging Configuration
LOG_LEVEL=debug
LOG_DIR=logs

# Email Configuration (if needed)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password

# Application Configuration
APP_VERSION=1.0.0
APP_NAME=FeedbackHub API
CORS_ORIGIN=http://localhost:3000