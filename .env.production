# =================================================================
# FEEDBACKHUB PRODUCTION ENVIRONMENT CONFIGURATION
# =================================================================
# ðŸš¨ SECURITY: Never commit actual production values to git
# Copy this file to .env.production and fill in real values

# =================================================================
# APPLICATION CONFIGURATION
# =================================================================
NODE_ENV=production
API_PORT=3001
APP_NAME=FeedbackHub
APP_VERSION=1.0.0

# =================================================================
# DOMAINS AND URLS
# =================================================================
# Frontend domain (Vercel deployment)
FRONTEND_URL=https://aiproductdiscovery.com
NEXT_PUBLIC_API_URL=https://your-api-name.up.railway.app

# API domain (Railway deployment)
API_DOMAIN=https://your-api-name.up.railway.app
WEBSITE_DOMAIN=https://aiproductdiscovery.com

# CORS Configuration
CORS_ORIGIN=https://aiproductdiscovery.com,https://www.aiproductdiscovery.com

# =================================================================
# DATABASE CONFIGURATION
# =================================================================
# PostgreSQL Database (Railway - update with your actual Railway database URL)
DATABASE_URL=postgresql://postgres:password@containers-us-west-xx.railway.app:5432/railway

# Database Connection Pool
DATABASE_MAX_CONNECTIONS=20
DATABASE_IDLE_TIMEOUT=30000
DATABASE_CONNECTION_TIMEOUT=10000

# =================================================================
# REDIS CONFIGURATION (Railway Redis Add-on)
# =================================================================
# Update with your Railway Redis URL when you add Redis service
REDIS_URL=redis://default:password@containers-us-west-xx.railway.app:6379
REDIS_HOST=containers-us-west-xx.railway.app
REDIS_PORT=6379
REDIS_PASSWORD=your-railway-redis-password
REDIS_DB=0
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=100
REDIS_CONNECT_TIMEOUT=10000

# =================================================================
# AUTHENTICATION - SUPERTOKENS
# =================================================================
SUPERTOKENS_CONNECTION_URI=https://your-supertokens-core-url
SUPERTOKENS_API_KEY=your-supertokens-api-key

# =================================================================
# OAUTH PROVIDERS
# =================================================================
# Google OAuth (Required for Google Sign In)
GOOGLE_CLIENT_ID=your-google-oauth-client-id
GOOGLE_CLIENT_SECRET=your-google-oauth-client-secret

# Slack OAuth (For Slack Integration)
SLACK_CLIENT_ID=your-slack-client-id
SLACK_CLIENT_SECRET=your-slack-client-secret
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Zendesk OAuth (For Zendesk Integration)
ZENDESK_CLIENT_ID=your-zendesk-client-id
ZENDESK_CLIENT_SECRET=your-zendesk-client-secret

# Intercom OAuth (For Intercom Integration)
INTERCOM_CLIENT_ID=your-intercom-client-id
INTERCOM_CLIENT_SECRET=your-intercom-client-secret

# =================================================================
# EMAIL SERVICE (Magic Links & Notifications)
# =================================================================
# Email Provider Configuration
SMTP_HOST=smtp.resend.com
SMTP_PORT=587
SMTP_USER=resend
SMTP_PASSWORD=your-resend-api-key

# Email Branding
SMTP_FROM_EMAIL=noreply@aiproductdiscovery.com
SMTP_FROM_NAME=AI Product Discovery

# =================================================================
# AI SERVICES
# =================================================================
# OpenAI Configuration (Required for AI features)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-mini
EMBEDDING_MODEL=text-embedding-3-small

# AI Service Limits
OPENAI_MAX_TOKENS=4096
OPENAI_TEMPERATURE=0.7
AI_RATE_LIMIT_PER_USER=100

# =================================================================
# SECURITY CONFIGURATION
# =================================================================
# JWT & API Security (Generate with: openssl rand -hex 32)
JWT_SECRET=your-super-secure-jwt-secret-min-32-chars
API_SECRET_KEY=your-api-secret-key-min-24-chars
WEBHOOK_SECRET=your-webhook-secret-min-16-chars

# CSRF Protection
CSRF_SECRET_KEY=your-csrf-secret-key

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT_MAX=1000
RATE_LIMIT_DEFAULT_INTERVAL=3600000

# =================================================================
# LOGGING & MONITORING
# =================================================================
# Log Configuration
LOG_LEVEL=info
LOG_DIR=/var/log/feedbackhub

# Monitoring & Analytics
SENTRY_DSN=your-sentry-dsn-for-error-tracking
ANALYTICS_KEY=your-analytics-key

# =================================================================
# FEATURE FLAGS
# =================================================================
# AI Features
ENABLE_AI_CHAT=true
ENABLE_AI_ANALYTICS=true
ENABLE_NATURAL_LANGUAGE_SEARCH=true

# Integration Features
ENABLE_SLACK_INTEGRATION=true
ENABLE_ZENDESK_INTEGRATION=true
ENABLE_INTERCOM_INTEGRATION=true

# Beta Features
ENABLE_ADVANCED_ANALYTICS=false
ENABLE_CUSTOM_INTEGRATIONS=false

# =================================================================
# PERFORMANCE & SCALING
# =================================================================
# API Configuration
API_REQUEST_TIMEOUT=30000
API_BODY_LIMIT=10mb
API_COMPRESSION=true

# Session Configuration
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAME_SITE=strict
SESSION_MAX_AGE=2592000000

# File Upload Limits
MAX_UPLOAD_SIZE=10mb
ALLOWED_FILE_TYPES=csv,xlsx,json

# =================================================================
# THIRD-PARTY SERVICES
# =================================================================
# AWS Configuration (if using AWS services)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
S3_BUCKET_NAME=feedbackhub-prod-uploads

# CDN Configuration
CDN_URL=https://cdn.feedbackhub.com

# =================================================================
# BACKUP & MAINTENANCE
# =================================================================
# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Railway/Vercel Configuration (no Docker needed)
PORT=3001

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="FeedbackHub is undergoing scheduled maintenance. We'll be back shortly!"

# =================================================================
# DEPLOYMENT INFORMATION
# =================================================================
DEPLOY_VERSION=1.0.0
DEPLOY_TIMESTAMP=2024-01-15T10:30:00Z
DEPLOY_ENVIRONMENT=production
HEALTH_CHECK_TOKEN=your-health-check-secret